<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Muu" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Button Content="Enable" Width="70" Margin="3" Name="EnableButton" Click="EnableButton_Click" />
                    <Button Content="Disable" Width="70" Margin="3" Name="DisableButton" Click="DisableButton_Click" />
                    <Label Content="Port:"></Label>
                    <TextBox AcceptsReturn="False" TextWrapping="NoWrap" Height="20" Width="50" Name="PortBox"></TextBox>
                </StackPanel>
            </DockPanel>
            <DockPanel>
                <ScrollViewer Name="LogViewer">
                    <TextBox Name="LogBox" TextChanged="LogBox_TextChanged" IsReadOnly="True"></TextBox>
                </ScrollViewer>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
